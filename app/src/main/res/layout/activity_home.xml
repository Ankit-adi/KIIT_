<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back2"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="144dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="98dp"
        android:layout_height="140dp"
        android:background="@drawable/department" />

    <Button
        android:id="@+id/button4"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_toRightOf="@id/button3"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/gallery" />

    <Button
        android:id="@+id/button5"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_below="@id/button3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="98dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/faculty" />

    <Button
        android:id="@+id/button6"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_below="@id/button4"
        android:layout_toRightOf="@id/button5"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/courses" />

    <Button
        android:id="@+id/button7"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_below="@id/button6"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/co_curr" />

    <Button
        android:id="@+id/button8"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_below="@id/button5"
        android:layout_toRightOf="@id/button7"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"

        android:background="@drawable/facility" />

    <Button
        android:id="@+id/button9"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_below="@id/button8"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/web" />

    <Button
        android:id="@+id/button10"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_below="@id/button8"
        android:layout_toRightOf="@id/button9"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/fees" />


</RelativeLayout> </ScrollView>